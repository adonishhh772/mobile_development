    <fragment
        android:id="@+id/nav_terms"
        android:name="uk.tees.b1162802.boro.ui.terms.TermsFragment"
        android:label="@string/menu_terms"
        tools:layout="@layout/fragment_terms" />

    <fragment
        android:id="@+id/nav_privacy"
        android:name="uk.tees.b1162802.boro.ui.privacy.PrivacyFragment"
        android:label="@string/menu_terms"
        tools:layout="@layout/privacy_policy" />
    <fragment
        android:id="@+id/nav_contact_us"
